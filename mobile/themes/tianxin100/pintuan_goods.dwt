function onload(){
		{foreach from=$pintuan.price_ladder item=item }
		document.getElementById('number_{$item.amount}').value = 1;//更新数量
		{/foreach}
		$('#number_single_buy').val(1);//更新数量
}

function changenum(diff) {
	var num = parseInt(document.getElementById('goods_number').value);
	var goods_number = num + Number(diff);
	if( goods_number >= 1){
		document.getElementById('goods_number').value = goods_number;//更新数量
		{foreach from=$pintuan.price_ladder item=item }
		document.getElementById('number_{$item.amount}').value = goods_number;//更新数量
		{/foreach}
		//document.getElementById('number_single_buy').value = goods_number;//更新数量
		$('#number_single_buy').val(goods_number)
		//changePrice();
	}
}

/**
 * 检验限购
 */
function check_and_submit(formNum) {
	var form = document.forms["form_" + formNum];
	var goods_id = {$pt_goods.goods_id};
	var num = jQuery(form).find("#number_" + formNum).val();
	jQuery.get('pintuan.php?act=check_limit&id='+goods_id+"&num="+num, function(data){
		if(data.error > 0){
			alert(data.message);
			return false;
		}else{
			form.submit();
		}
	},'json');
}

function single_buy_check(){
	var form = document.forms["form_single"];
	var goods_id = {$pt_goods.goods_id};
	var num = jQuery(form).find("#number_single_buy").val();
	jQuery.get('pintuan.php?act=check_limit&id='+goods_id+"&num="+num, function(data){
		if(data.error > 0){
			alert(data.message);
			return false;
		}else{
			form.submit();
		}
	},'json');
}

/**
 * 接收返回的信息
 */
function changePriceResponse(res) {
  	if (res.err_msg.length > 0) {
    	alert(res.err_msg);
  	} else {
    	document.forms['ECS_FORMBUY'].elements['number'].value = res.qty;

    	if (document.getElementById('ECS_GOODS_AMOUNT'))
      		document.getElementById('ECS_GOODS_AMOUNT').innerHTML = res.result;
  	}
}
</script>
