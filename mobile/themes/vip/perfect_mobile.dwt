<script type="text/javascript">
function sendVerifyCode(field_id, field_name, button, refresh_time){
	var mobile = trim(document.getElementById(field_id).value);
	if(mobile == '') {
		//alert(field_name+" 不能为空！");
		openAlertDiv(field_name+" 不能为空！");
		return;
	}
	
	jQuery(button).attr("disabled","disabled"); 
	$.get('sms.php?step=getverifycode2&mobile='+mobile+'&r=' + Math.random(), function(result){
		if(result.error == 0){
			//成功
			for(var i=refresh_time;i>=0;i--) { 
		        window.setTimeout('doRefresh("' + jQuery(button).attr('id') + '",' + i + ', "' + jQuery(button).attr('value') + '")', (refresh_time-i) * 1000); 
		    } 
		}else{
			//失败
			jQuery(button).removeAttr("disabled");
		}
		openAlertDiv(result.message);
	}, 'json');
}
function ajaxFormQuery() {
	var url = $("#s_form").attr('action') + "?"
			+ $("#s_form").serialize();
	//debug("url", url);
	$.get(url,function(result){
		if(result.error == 0){
			//成功
			location.href='index.php';
		}else{
			//失败
			openAlertDiv(result.message);
		}
	}, 'json');
	return false;
}
$(function(){
	$("#s_form button[type=submit]").click(function() {
		var mobile = trim($("#mobile").val());
		if(mobile == '') {
			openAlertDiv("请输入11位手机号码！");
			return false;
		}
		var verify_code = trim($("#verify_code").val());
		if(verify_code == '') {
			openAlertDiv("请输入验证码！");
			return false;
		}
		return ajaxFormQuery();
	});
});
</script>
