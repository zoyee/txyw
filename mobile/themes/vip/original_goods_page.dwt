<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8" />
<title>{$page_title}</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />
<meta name="apple-mobile-web-app-capable" content="yes" />
<meta name="apple-mobile-web-app-status-bar-style" content="black" />
<meta name="format-detection" content="telephone=no" />
<link href="{$ectouch_themes}/images/touch-icon.png" rel="apple-touch-icon-precomposed" />
<link href="{$ectouch_themes}/images/favicon.ico" rel="shortcut icon" type="image/x-icon" />
<link rel="stylesheet" type="text/css" href="{$ectouch_themes}/css/public.css?v=1.2"/>
<link href="{$ectouch_themes}/ectouch.css?v=1.1" rel="stylesheet" type="text/css" />
<link rel="stylesheet" type="text/css" href="js/mtoch/css/swiper-3.3.1.min.css"/>
<link rel="stylesheet" type="text/css" href="{$ectouch_themes}/css/zlb.css?v=1"/>
<script type="text/javascript" src="{$ectouch_themes}/js/jquery.min.js"></script>
<script type="text/javascript" src="js/mtoch/js/swiper-3.3.1.min.js"></script>
{insert_scripts files='common.js'}
{$stats_code}
</head>
<body>
<div id="page">
<div id="tbh5v0">

<div class="swiper-container swiper-container-horizontal">
  <!-- 分类 -->
  <div class="swiper-wrapper">
  	 <div class="swiper-slide {if $goods_type eq ''}active-nav{/if}" {if $goods_type neq ''}onclick="location.href='suppliers.php?act=original_goods_page'"{/if}>全部</div>
  	 <div class="swiper-slide {if $goods_type eq 'unOnsale'}active-nav{/if}" {if $goods_type neq 'unConfirm'}onclick="location.href='suppliers.php?act=original_goods_page&goods_type=unOnsale'"{/if}>未上架</div>
  	 <div class="swiper-slide {if $goods_type eq 'onsale'}active-nav{/if}" {if $goods_type neq 'unShipping'}onclick="location.href='suppliers.php?act=original_goods_page&goods_type=onsale'"{/if}>已上架</div>
  </div>
</div>

<div class="content"> 
    <section class="goods_list">
    	<section class="content order_box padd1 radius10 single_item" style="border: 1px solid #cccccc;">
       	<div class="item"><dl style="position:relative;">
        	<dt class="goods_image"></dt>
            <div>
              <p  style="font-weight: bold;"><span class="goods_name"></span></p>
              <p><span class="goods_guide"></span></p>
              <p><span class="goods_price"></span></p>
              <div class="original-goods-button"></div>
         	</div>
        </dl></div>
    	</section>
    	<a href="javascript:;" style="text-align:center" class="get_more"></a>
    </section>
</div>

</div>
 </div>
  <!-- #BeginLibraryItem "/library/footer_nav_suppliers.lbi" --><!-- #EndLibraryItem -->
</body>
</html>
<script type="text/javascript" src="{$ectouch_themes}/js/jquery.more.js"></script>
<script type="text/javascript">
    var more_status = 0;
    jQuery(function($){
    	$('.goods_list').more({'address': 'suppliers.php?act=query_original_goods&goods_type={$goods_type}', amount: 6, 'spinner_code':'<div style="text-align:center; margin:10px;"><img src="{$ectouch_themes}/images/loader.gif" /></div>'})
		$(window).scroll(function () {
			if (more_status == 0 && $(window).scrollTop() == $(document).height() - $(window).height()) {
				$('.get_more').click();
				more_status = 1;
				setTimeout(function(){
					more_status = 0;
				}, '1000');
			}
		});
    	
    	var mySwiper = new Swiper('.swiper-container',{
   		 direction : "horizontal",
   		 watchSlidesProgress : true,
   		 watchSlidesVisibility : true,
   		 slidesPerView : 3,
   		 onInit: function(swiper){
   		 },
   		 onTap: function(){
   		 }
   	 });
    	
    	$(window).scroll(function(){
    	    var mytop = $(window).scrollTop();
    	    if( mytop > $(".swiper-container").offset().top){
    	    	if(!$(".swiper-container").hasClass("float-top")){
    	        	$(".swiper-container").addClass("float-top")
    	    	}
    	    }else if(mytop == 0){
    	    	$(".swiper-container").removeClass("float-top")
    	    }

    	});
    });
</script>