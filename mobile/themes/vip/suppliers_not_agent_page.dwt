<script type="text/javascript" src="{$ectouch_themes}/js/jquery.more.js"></script>
<script type="text/javascript">
	var more_status = 0;
	jQuery(function($){
		$('.user_list').more({'address': 'suppliers.php?act=query_not_agent', amount: 6, 'spinner_code':'<div style="text-align:center; margin:10px;"><img src="{$ectouch_themes}/images/loader.gif" /></div>'})
		$(window).scroll(function () {
			if (more_status == 0 && $(window).scrollTop() == $(document).height() - $(window).height()) {
				$('.get_more').click();
				more_status = 1;
				setTimeout(function(){
					more_status = 0;
				}, '1000');
			}
		}); 
		
		var mySwiper = new Swiper('.swiper-container',{
			 direction : "horizontal",
			 watchSlidesProgress : true,
			 watchSlidesVisibility : true,
			 slidesPerView : 3,
			 onInit: function(swiper){
			 },
			 onTap: function(){
			 }
		 });
		
		$(window).scroll(function(){
    	    var mytop = $(window).scrollTop();
    	    if( mytop > $(".swiper-container").offset().top){
    	    	if(!$(".swiper-container").hasClass("float-top")){
    	        	$(".swiper-container").addClass("float-top")
    	    	}
    	    }else if(mytop == 0){
    	    	$(".swiper-container").removeClass("float-top")
    	    }

    	});
	});

	function do_operate_agent(opt, user_id){
		$.get('suppliers.php?act=do_operate_agent&opt=' + opt + '&user_id=' + user_id, function(result){
			openAlertDiv('操作成功', 'location.reload()');
		});
	}
	function del_agent(user_id){
		openConfirmDiv('您确定要解除该认证代理商吗？',"cancel_div();do_operate_agent('del', " + user_id + ")");
	}
	function invite_agent(user_id){
		openConfirmDiv('您确定要邀请该用户成为认证代理商吗？',"cancel_div();do_operate_agent('invite', " + user_id + ")");
	}
	function cancel_invite(user_id){
		openConfirmDiv('您确定要取消邀请该用户成为认证代理商吗？',"cancel_div();do_operate_agent('cancel', " + user_id + ")");
	}
	function refuse_agent(user_id){
		openConfirmDiv('您确定要拒绝该用户的认证代理申请吗？',"cancel_div();do_operate_agent('refuse', " + user_id + ")");
	}
	function agent_pass(user_id){
		openConfirmDiv('您确定要同意该用户成为您的认证代理吗？',"cancel_div();do_operate_agent('pass', " + user_id + ")");
	}
</script>

