onload = function(){
		document.getElementById('number').value = 1;//更新数量
}

function changenum(diff) {
	var num = parseInt(document.getElementById('goods_number').value);
	var goods_number = num + Number(diff);
	if( goods_number >= 1){
		document.getElementById('goods_number').value = goods_number;//更新数量
		document.getElementById('number').value = goods_number;//更新数量
		//changePrice();
	}
}

/**
 * 检验限购
 */
function check_and_submit() {
	var form = document.forms["buy_form"];
	var goods_id = {$pintuan.goods_id};
	var num = jQuery(form).find("#number").val();
	jQuery.get('pintuan.php?act=check_limit&id='+goods_id+"&num="+num, function(data){
		if(data.error > 0){
			//alert(data.message);
			if(data.error == 888){
				openAlertDiv(data.message);
			}else if(data.error == 999){
				openAlertDiv("拼团活动只对商城会员开放，请先关注青山老农，无需注册，自动成为会员。", "subscribe()");
			}
			return false;
		}else{
			form.submit();
		}
	},'json');
}
</script>
